@page
@model CampusLearn.Pages.Authentication.LogInModel
@{
    ViewData["Title"] = "Student Login";
}

@* LogIn Styles *@
<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />

<div class="login-container">
        <h2>Welcome Back!</h2>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" />
                <span asp-validation-for="Email" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" />
                <span asp-validation-for="Password" class="validation-message"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="validation-message"></div>

            <button type="submit" class="btn">Log in</button>
        </form>
        <div class="link-group">
            <a href="#" class="link">Forgot password?</a>
            <a href="/Account/Register" class="link">Don't have an account? Register</a>
        </div>
        <div class="info-section">
            <h3>Visit Us</h3>
            <p>Pretoria Campus</p>
            <p>Kempton Park Campus</p>
            <p>Stellenbosch</p>
            <h3>Contact Us</h3>
            <p>☎ 010 551 5382</p>
            <p>✉ info@belgicumcampus.ac.za</p>
        </div>
    </div>

