@page
@model CampusLearn.Pages.Authentication.LogInModel
@{
    ViewData["Title"] = "Student Login";
}

@* LogIn Styles *@
<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />

<div class="login-container">
    <h2>Hi, Welcome to CampusLearn</h2>
    <p style="color:grey; font-size:14px">Enter your details to log in your account</p>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <form method="post">
        <div class="form-group">
            <label class="form-container" asp-for="Email">Email</label>
            <input asp-for="Email" />
            <span asp-validation-for="Email" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="validation-message"></span>
            <a href="\Authentication\ForgotPassword" class="link">Forgot password?</a>

        </div>

        <button type="submit" class="Logbtn">Log in</button>
    </form>
    <div class="link-group">
    <h6>Don't have an account? <a href="\Authentication\SignUp" class="link">Register</a></h6>
    </div>
</div>

