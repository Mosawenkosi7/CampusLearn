@page
@model CampusLearn.Pages.Authentication.SignUpModel
@{
    ViewData["Title"] = "Student Register";
}

@* SignUp Styles *@
<link rel="stylesheet" href="~/css/SignUp.css" asp-append-version="true" />

<body>
    <div class="register-container">
        <h2>Create your student account</h2>
        <form asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="FirstName">First Name*</label>
                <input asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="validation-message"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name*</label>
                <input asp-for="LastName" />
                <span asp-validation-for="LastName" class="validation-message"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonnelNumber">Personnel Number*</label>
                <input asp-for="PersonnelNumber" />
                <span asp-validation-for="PersonnelNumber" class="validation-message"></span>
            </div>
            <div class="form-group">
                <label asp-for="CellphoneNumber">Cellphone Number*</label>
                <input asp-for="CellphoneNumber" />
                <span asp-validation-for="CellphoneNumber" class="validation-message"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email*</label>
                <input asp-for="Email" />
                <span asp-validation-for="Email" class="validation-message"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password*</label>
                <input asp-for="Password" />
                <span asp-validation-for="Password" class="validation-message"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password*</label>
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
            </div>
            <button type="submit" class="Reg">Sign up</button>
        </form>
        <h6>Have an account? <a href="/Authentication/LogIn" class="link">Log In here.</a></h6>
    </div>
</body>
   