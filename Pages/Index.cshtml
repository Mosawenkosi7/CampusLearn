@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@* homePage Styles *@
<link rel="stylesheet" href="~/css/HomePage.css" asp-append-version="true" />

<div class="container">
    <div class="row heading-section">
        <div class="col-6 pt-5">
            <h1>Transform Your Learning Experience with CampusLearn™</h1>
            <p class="mt-3">
                Get instant academic support from qualified peer tutors, 24/7 AI assistance,
                and a collaborative learning community—all designed specifically for Belgium
                Campus students.
            </p>

            <button class="btn btn-primary mt-4">Find A Tutor</button>
        </div>
        <div class="col-6" style="display:block; overflow:hidden; background-color:black;padding:0">
            <img src="/Media/webimages/tutoring.jpg" style="width:100%" />
        </div>
         <div class="quotes">
             <h5 class="text-center" id="quoteDisplay">
                 Education is the most powerful weapon which you can use to change the world. – Nelson Mandela
             </h5>
         </div>

    </div>

    <div class="row mt-5 benefits-section">
        <h2 class="text-center mb-5">Everything You Get with CampusLearn™</h2>
        <div class="benefit-item">
            <div class="benefit-icon">
                <img src="/Media/icons/approved.png" style="width:100%; height:100%" />
            </div>
            <p class="benefit-text">
                Connect with peer tutors who know your BCom, BIT, and Diploma modules inside out.
                Get one-on-one support, clarify tough concepts, and prepare with confidence for exams and
                assignments.
            </p>
        </div>

        <div class="benefit-item">
            <div class="benefit-icon">
                <img src="/Media/icons/chatai.png" style="width:100%; height:100%" />
            </div>
            <p class="benefit-text">
                Our intelligent chatbot gives instant answers to common academic questions.
                It's like having a study buddy who's always available.
            </p>
        </div>

        <div class="benefit-item">
            <div class="benefit-icon">
                <img src="/Media/icons/Book.png" style="width:100%; height:100%" />
            </div>
            <p class="benefit-text">
                Access tutor-uploaded videos, PDFs, and interactive materials designed to match your coursework.
                Learn at your own pace with high-quality study materials.
            </p>
        </div>

        <div class="benefit-item">
            <div class="benefit-icon">
                <img src="/Media/icons/forum.png" style="width:100%; height:100%" />
            </div>
            <p class="benefit-text">
                Join our moderated forum for anonymous academic discussions.
                Share ideas, ask questions, and collaborate without pressure or judgment.
            </p>
        </div>

        <div class="benefit-item">
            <div class="benefit-icon">
                <img src="/Media/icons/globe.png" style="width:100%; height:100%" />
            </div>
            <p class="benefit-text">
                Whether at home, on campus, or on the go, CampusLearn™ is with you 24/7.
                Study support is available whenever and wherever you need it.
            </p>
        </div>
     </div>

     <div class="row getToKnow p-0">
        <h2 class="p-0 mb-3">Get To Know Your Tutors</h2>
        <p class="p-0">
            Browse through our featured tutors and find the right support for your courses.
            Each tutor is here to help you excel in your <span class="course">BCom, BIT, and Diploma modules</span>
