@* message for canceling an appoinment  *@
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
       @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}



<div class="bookings-table">
    <table class="table table-striped table-hover mt-5">

        <thead>
            <tr>
                <th>Tutor Name</th>
                <th>Module Code</th>
                <th>Appointment Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.appointmentTables)
            {
                var modalId = $"cancelModal-{item.Booking.BookingId}";
                <tr>
                    <td>@item.User.FullName</td>
                    <td>@item.TutorAvailability.ModuleCode</td>
                    <td>@item.Booking.DateBooked</td>
                    <td>@item.Booking.Status</td>
                    <td>
                        <a href="/" class="btn btn-success">Visit</a>
                        <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#@modalId">
                            Cancel
                        </a>

                        <!-- Modal -->
                        <div class="modal fade" id="@modalId" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5">Cancel @item.TutorAvailability.ModuleCode</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to cancel this appointment?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                        <form method="post" asp-page-handler="CancelSession">

                                            <input asp-for="Booking.Status" type="hidden" value="@item.Booking.Status" />
                                            <input asp-for="Booking.BookingId" type="hidden" value="@item.Booking.BookingId" />
                                            <button type="submit" class="btn btn-danger">Yes, Cancel</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <div class="pagination d-flex justify-content-center">
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Appointments pagination">
                <ul class="pagination">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="/Student/Dashboard" asp-route-p="@(Model.CurrentPage - 1)">Previous</a>
                    </li>
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="/Student/Dashboard" asp-route-p="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-page="/Student/Dashboard" asp-route-p="@(Model.CurrentPage + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

<div class="bookings-summary">
    <div style="border-right: 3px solid black; padding-right:35px">
        <div class="d-flex  gap-3" >
            <i class="bi bi-calendar4" style="font-size:55px; font-weight:bolder"></i> <h4 style="font-size:40px"> @Model.totalSessions</h4>
        </div>
        <p>Sessions Booked</p>
    </div>
    <div style="border-right: 3px solid black; padding-right:35px">
        <div class="d-flex  gap-3">
            <i class="bi bi-clock" style="font-size:55px; font-weight:bolder"></i> <h4 style="font-size:40px">@Model.totalUpcomingSessions </h4>
        </div>
        <p>Upcoming Sessions</p>
    </div>
    <div style="border-right: 3px solid black; padding-right:35px;">
        <div class="d-flex  gap-3">
            <i class="bi bi-check2-square" style="font-size:55px; font-weight:bolder"></i> <h4 style="font-size:40px">@Model.completedSessions</h4>
        </div>
        <p>Sessions Completed</p>
    </div>
    <div>
        <div class="d-flex  gap-3">
            <i class="bi bi-people" style="font-size:55px; font-weight:bolder"></i> <h4 style="font-size:40px"> 0</h4>
        </div>
        <p>Tutors Engaged</p>
    </div>
</div>

